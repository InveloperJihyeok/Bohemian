    <style name="Base.Theme.Bohemian" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Bohemian" parent="Base.Theme.Bohemian" />

    <style name="Theme.Bohemian.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#ffffff</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_bohemian_logo</item>
        <item name="android:windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.Bohemian</item>
    </style>

    <style name="BlueItalicText">
        <item name="android:textColor">#ffffff</item> <!-- 흰색 글씨 -->
        <item name="android:textStyle">italic</item> <!-- 이탤릭체 스타일 -->
    </style>
